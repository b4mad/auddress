<% content_for :scripts do %>
  <%= javascript_include_tag 'clued' %>
<% end %>

<div id="left" class="nobook">
  <div id="signup">
    Ok, boy! So fill in those blanks.<br>
  </div>
</div>

<div id="right" class="closed">
  <% if @invitation %>
    <%= 'You have been invited by' %>&nbsp;<%= @invitation.user.person.display_name %>
  <% end %>


      <%= error_messages_for :user %>
      <% form_for :user, :url => users_path, :html => {:id => 'login', :class => 'clued'} do |f| -%>
        <label for="login">login</label>
        <%= f.text_field :login, :size => 12, :title => "login", :class => 'clue'  %>

        <label for="password">password</label>
        <%= f.password_field :password, :title => "password", :class => 'clue', :size => 8 %>

        <label for="password_confirmation">confirm password</label>
        <%= f.password_field :password_confirmation, :size => 8 %>

             
        <%= f.submit _('join now'), :class => 'button'%>
      <% end -%>
</div>

